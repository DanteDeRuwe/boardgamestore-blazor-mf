<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.Server" Version="7.0.4" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\framework\MicrofrontendFramework.Blazor\MicrofrontendFramework.Blazor.csproj" />
    <ProjectReference Include="..\BoardgameStore.Client\BoardgameStore.Client.csproj" />
    <ProjectReference Include="..\BoardgameStore.Shared\BoardgameStore.Shared.csproj" />
  </ItemGroup>

  <!-- Artificially simulating the "pushing" of the microfrontends to a CDN -->
  <Target Name="CopyDll" AfterTargets="Build">
    <RemoveDir Directories="CDN" />
    <Copy SourceFiles="..\..\discover-microfrontend\BoardgameStore.Discover\bin\Debug\net7.0\BoardgameStore.Discover.dll" DestinationFolder="CDN" OverwriteReadOnlyFiles="true" SkipUnchangedFiles="false" />
    <Copy SourceFiles="..\..\order-microfrontend\BoardgameStore.Order\bin\Debug\net7.0\BoardgameStore.Order.dll" DestinationFolder="CDN" OverwriteReadOnlyFiles="true" SkipUnchangedFiles="false" />
  </Target>
  <Target Name="CopyPdb" AfterTargets="CopyDll" Condition=" '$(Configuration)' == 'Debug' ">
    <Copy SourceFiles="..\..\discover-microfrontend\BoardgameStore.Discover\bin\Debug\net7.0\BoardgameStore.Discover.pdb" DestinationFolder="CDN" OverwriteReadOnlyFiles="true" SkipUnchangedFiles="false"/>
    <Copy SourceFiles="..\..\order-microfrontend\BoardgameStore.Order\bin\Debug\net7.0\BoardgameStore.Order.pdb" DestinationFolder="CDN" OverwriteReadOnlyFiles="true" SkipUnchangedFiles="false"/>
  </Target>

</Project>
